<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingHorizontal="4dp"
              android:paddingVertical="2dp">

    <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2.5dp"
            android:layout_marginTop="2dp"
            app:cardUseCompatPadding="true">

        <LinearLayout
                android:clickable="true"
                android:background="?android:selectableItemBackground"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

            <TextView
                    android:id="@+id/item_begin_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:textSize="30sp"
                    android:layout_weight="0"
                    android:layout_marginLeft="5dp"
                    android:text="08:00" android:textAlignment="textEnd"/>

            <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0">
            </View>

            <LinearLayout
                    android:orientation="vertical"
                    android:padding="2dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/item_para_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:gravity="center_horizontal" android:text="Абстрактная поебеника"
                />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/item_para_room"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:gravity="center_horizontal|center_vertical"
                            android:textAlignment="center"
                            android:text="202"/>
                    <Space
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >
                    </Space>


                    <TextView
                            android:id="@+id/item_para_teacher"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:gravity="center_horizontal|center_vertical"
                            android:textAlignment="center"
                            android:textSize="11sp"
                            android:text="Коловратова"/>

                </LinearLayout>
            </LinearLayout>
            <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0" >
            </View>
            <TextView
                    android:id="@+id/item_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical|start"
                    android:layout_weight="0"
                    android:textSize="30sp"
                    android:text="09:35" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
